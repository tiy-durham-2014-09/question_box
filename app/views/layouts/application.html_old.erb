<!DOCTYPE html>
<html>
<head>
  <title>QuestionBox</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="wrapper">

	<div class="header">

		<div class="left_nav">
		QuestionBox

		| <%= link_to 'All questions', questions_path %>

		</div>

		<div class="right_nav">
		  <% if logged_in? %>
		    | Logged in as <%= current_user.name %>
		    | <%= link_to "Logout", login_path, :method => :delete %>
		  <% else %>
		    | <%= link_to "Login", new_login_path %>
		  <% end %>
		</div>

	</div>
	<div class="main">

		<%= yield %>

	</div>
</div>
