
<div class="row">

	<div class="small-10 small-offset-1 columns">

	  <h1>Login or <%= link_to 'register', new_user_path %></h1>

	    <%= form_tag login_path, :method => :post do %>

	      <%= label_tag :email %>
	      <%= text_field_tag :email %>

	      <%= label_tag :password %>
	      <%= password_field_tag :password %>

	      <%= button_tag "Log in" %>

	    <% end %>

	</div>

</div>
